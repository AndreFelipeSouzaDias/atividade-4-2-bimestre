programa
{
    funcao inicio()
    {
        inteiro num

        escreva("Digite um número entre 1 e 10 para gerar a tabuada: ")
        leia(num)

        enquanto (num < 1 ou num > 10) {
            escreva("Número inválido. Por favor, digite um número entre 1 e 10: ")
            leia(num)
        }

        para (inteiro i = 1; i <= 10; i = i + 1) {
            escreva(num, " x ", i, " = ", num * i, "\n")
        }
    }
}
